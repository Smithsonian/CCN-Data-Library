@article{xu2021,
  title = {Examining the {{Differences}} between {{Invasive Sonneratia}} Apetala and {{Native Kandelia}} Obovata for {{Mangrove Restoration}}: {{Soil Organic Carbon}}, {{Nitrogen}}, and {{Phosphorus Content}} and {{Pools}}},
  author = {Xu, YW and Liao, BW and Jiang, ZM and Xin, K and Xiong, YM and Zhang, Y},
  year = {2021},
  month = jul,
  journal = {JOURNAL OF COASTAL RESEARCH},
