@article{pinsonneault2021,
  title = {Dissolved Organic Carbon Sorption Dynamics in Tidal Marsh Soils},
  author = {Pinsonneault, AJ and Neale, PJ and Tzortziou, M and Canuel, EA and Pondell, CR and Morrissette, H and Megonigal, JP and Lefcheck, JS},
