@article{kroeger2017,
  title = {Restoring Tides to Reduce Methane Emissions in Impounded Wetlands: {{A}} New and Potent {{Blue Carbon}} Climate Change Intervention},
  author = {Kroeger, KD and Crooks, S and {Moseman-Valtierra}, S and Tang, JW},
  year = {2017},
