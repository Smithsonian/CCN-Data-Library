@article{fu2021,
  title = {Stocks and Losses of Soil Organic Carbon from {{Chinese}} Vegetated Coastal Habitats},
  author = {Fu, CC and Li, Y and Zeng, L and Zhang, HB and Tu, C and Zhou, Q and Xiong, KX and Wu, JP and Duarte, CM and Christie, P and Luo, YM},
