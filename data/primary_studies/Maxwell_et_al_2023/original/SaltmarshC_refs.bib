  keywords = {GROWTH,indicator,INVASION,JIANGSU PROVINCE,limiting nutrient,N: P ratio,NITROGEN,NUTRIENT LIMITATION,PHOSPHORUS,PHRAGMITES-AUSTRALIS,RATIOS,SALT MARSHES,SOIL ORGANIC-CARBON,soil salinity,threshold}
