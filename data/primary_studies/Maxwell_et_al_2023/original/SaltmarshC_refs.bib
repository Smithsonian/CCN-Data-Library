@article{jin2017,
  title = {Changes in {{Soil Organic Carbon Dynamics}} in a {{Native C-4 Plant-Dominated Tidal Marsh Following Spartina}} Alterniflora {{Invasion}}},
  author = {Jin, BS and Lai, DYF and Gao, DZ and Tong, C and Zeng, CS},
