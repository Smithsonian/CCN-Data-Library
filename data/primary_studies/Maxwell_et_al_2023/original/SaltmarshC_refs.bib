@article{chen2018d,
  title = {Temporal and Spatial Impact of {{Spartina}} Alterniflora Invasion on Methanogens Community in {{Chongming Island}}, {{China}}},
  author = {Chen, XP and Sun, J and Wang, Y and Zhang, HY and He, CQ and Liu, XY and Bu, NS and Long, XE},
  year = {2018},
  month = jul,
  journal = {JOURNAL OF MICROBIOLOGY},
  volume = {56},
