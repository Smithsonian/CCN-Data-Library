@article{li2020e,
  title = {Nitrogen Input Weakens the Control of Inundation Frequency on Soil Organic Carbon Loss in a Tidal Salt Marsh},
  author = {Li, JY and Han, GX and Zhao, ML and Qu, WD and Nie, M and Song, WM and Xie, BH and Eller, F},
