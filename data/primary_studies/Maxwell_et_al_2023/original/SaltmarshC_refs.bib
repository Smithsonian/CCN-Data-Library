@article{lewis2014,
  title = {Effects of Flooding and Warming on Soil Organic Matter Mineralization in {{Avicennia}} Germinans Mangrove Forests and {{Juncus}} Roemerianus Salt Marshes},
  author = {Lewis, DB and Brown, JA and Jimenez, KL},
  year = {2014},
  month = feb,
  journal = {ESTUARINE COASTAL AND SHELF SCIENCE},
