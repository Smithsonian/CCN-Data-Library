  keywords = {ACCUMULATION,biodiversity,BIODIVERSITY,blue carbon,CARBON,cattle,coastal protection,CONSERVATION,DIVERSITY,ecosystem service trade-offs,FERAL HORSES,grasslands,HERBIVORES,horses,IMPACT,LAND MANAGEMENT,sheep,soil,vegetation,VEGETATION}
