  keywords = {Bioaccumulation,COMMON REED,CONTAMINATION,Cyperus malaccensis,ECOLOGICAL RISKS,INTERTIDAL ZONE,Metals,Min River estuary,POTAMOGETON-PECTINATUS L.,POTENTIAL USE,SALT-MARSH,SEDIMENTS,SOIL ORGANIC-CARBON,Spartina alterniflora,WETLAND SOILS}
