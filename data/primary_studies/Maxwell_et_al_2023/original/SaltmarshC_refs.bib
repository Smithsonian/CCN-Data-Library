@article{hinson2019,
  title = {Environmental {{Controls}} on the {{Distribution}} of {{Tidal Wetland Soil Organic Carbon}} in the {{Continental United States}}},
  author = {Hinson, AL and Feagin, RA and Eriksson, M},
