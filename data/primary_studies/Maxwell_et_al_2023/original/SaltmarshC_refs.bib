  keywords = {active carbon,CHRONOSEQUENCE,CLIMATE-CHANGE,DECOMPOSITION,DISSOLVED ORGANIC-MATTER,nitrogen,phosphorus,plant invasion,RICE STRAW,SALT-MARSH,SEQUESTRATION,soil carbon,soil organic matter,SPARTINA-ALTERNIFLORA,STOICHIOMETRY,TOTAL NITROGEN}
