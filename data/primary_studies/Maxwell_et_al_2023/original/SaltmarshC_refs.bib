@article{delaune2018,
  title = {Differences in Long-Term vs Short-Term Carbon and Nitrogen Sequestration in a Coastal River Delta Wetland: {{Implications}} for Global Budgets},
  author = {DeLaune, RD and White, JR and {Elsey-Quirk}, T and Roberts, HH and Wang, DQ},
  year = {2018},
