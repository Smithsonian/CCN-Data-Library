  keywords = {COASTAL EUTROPHICATION,COMPONENTS,FERTILIZATION,HETEROTROPHIC RESPIRATION,Inundation frequency,MINERALIZATION,Nitrogen input,SEQUESTRATION,Soil CO2 and CH4 emissions,Soil DOC loss,SPARTINA-ALTERNIFLORA INVASION,Tidal salt marsh,USE EFFICIENCY,WETLAND SOILS,YELLOW-RIVER DELTA}
