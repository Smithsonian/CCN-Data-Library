  keywords = {ACCUMULATION,BLUE CARBON,COASTAL,FRANCISCO BAY,MANGROVE FORESTS,ORGANIC-CARBON,SALT-MARSH,SAN-JOAQUIN DELTA,SEDIMENT,VERTICAL ACCRETION}
