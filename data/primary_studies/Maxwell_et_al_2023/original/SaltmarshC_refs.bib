@article{cui2012,
  title = {Long-Term Changes in Topsoil Chemical Properties under Centuries of Cultivation after Reclamation of Coastal Wetlands in the {{Yangtze Estuary}}, {{China}}},
  author = {Cui, J and Liu, C and Li, ZL and Wang, L and Chen, XF and Ye, ZZ and Fang, CM},
  year = {2012},
