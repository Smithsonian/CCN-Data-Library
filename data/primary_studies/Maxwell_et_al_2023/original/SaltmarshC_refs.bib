@article{wang2018,
  title = {Dynamic Characteristics of Soil Respiration in {{Yellow River Delta}} Wetlands, {{China}}},
  author = {Wang, X and Luo, XX and Jia, HL and Zheng, H},
  year = {2018},
  month = feb,
  journal = {PHYSICS AND CHEMISTRY OF THE EARTH},
