@article{abbott2019,
  title = {Factors Influencing Blue Carbon Accumulation across a 32-Year Chronosequence of Created Coastal Marshes},
  author = {Abbott, KM and {Elsey-Quirk}, T and DeLaune, RD},
  year = {2019},
  month = aug,
  journal = {ECOSPHERE},
  volume = {10},
