@article{shiau2019,
  title = {Carbon Storage Potential in a Recently Created Brackish Marsh in Eastern {{North Carolina}}, {{USA}}},
  author = {Shiau, YJ and Burchell, MR and Krauss, KW and Broome, SW and Birgand, F},
  year = {2019},
