@article{baustian2021,
  title = {Long-{{Term Carbon Sinks}} in {{Marsh Soils}} of {{Coastal Louisiana}} Are at {{Risk}} to {{Wetland Loss}}},
  author = {Baustian, MM and Stagg, CL and Perry, CL and Moss, LC and Carruthers, TJB},
