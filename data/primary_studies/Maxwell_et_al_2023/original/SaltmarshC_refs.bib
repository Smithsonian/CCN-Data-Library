@article{whitaker2015,
  title = {Vegetation Persistence and Carbon Storage: {{Implications}} for Environmental Water Management for {{Phragmites}} Australis},
  author = {Whitaker, K and Rogers, K and Saintilan, N and Mazumder, D and Wen, L and Morrison, RJ},
  year = {2015},
  month = jul,
  journal = {WATER RESOURCES RESEARCH},
