@article{xiang2015,
  title = {Invasion Chronosequence of {{Spartina}} Alterniflora on Methane Emission and Organic Carbon Sequestration in a Coastal Salt Marsh},
  author = {Xiang, J and Liu, DY and Ding, WX and Yuan, JJ and Lin, YX},
  year = {2015},
