@article{hu2020d,
  title = {Shifts in {{Microbial Biomass C}}/{{N}}/{{P Stoichiometry}} and {{Bacterial Community Composition}} in {{Subtropical Estuarine Tidal Marshes Along}} a {{Gradient}} of {{Freshwater-Oligohaline Water}}},
  author = {Hu, MJ and Penuelas, J and Sardans, J and Yang, XY and Tong, C and Zou, SQ and Cao, WZ},
