@article{wang2021f,
  title = {Plant Biomass and Rates of Carbon Dioxide Uptake Are Enhanced by Successful Restoration of Tidal Connectivity in Salt Marshes},
  author = {Wang, FM and Eagle, M and Kroeger, KD and Spivak, AC and Tang, JW},
  year = {2021},
