@article{chen2012,
  title = {Effect of {{Spartina}} Alterniflora Invasion and Its Controlling Technologies on Soil Microbial Respiration of a Tidal Wetland in {{Chongming Dongtan}}, {{China}}},
  author = {Chen, JH and Wang, L and Li, YL and Zhang, WQ and Fu, XH and Le, YQ},
