@article{feng2017,
  title = {Effects of Short-Term Invasion of {{Spartina}} Alterniflora and the Subsequent Restoration of Native Mangroves on the Soil Organic Carbon, Nitrogen and Phosphorus Stock},
  author = {Feng, JX and Zhou, J and Wang, LM and Cui, XW and Ning, CX and Wu, H and Zhu, XS and Lin, GH},
  year = {2017},
