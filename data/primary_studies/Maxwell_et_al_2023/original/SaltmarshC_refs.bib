@article{yang2016d,
  title = {Response of the Soil Microbial Community Composition and Biomass to a Short-Term {{Spartina}} Alterniflora Invasion in a Coastal Wetland of Eastern {{China}}},
  author = {Yang, W and Yan, YE and Jiang, F and Leng, X and Cheng, XL and An, SQ},
