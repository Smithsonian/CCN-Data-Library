  keywords = {CARBON,chronosequence,ecosystem development,MITIGATION,NEED,NITROGEN,North Carolina,reference wetland,restoration and rehabilitation,salt marshes,SALT-MARSH,SEDIMENT,Spartina alterniflora,wetland creation,WETLAND RESTORATION}
