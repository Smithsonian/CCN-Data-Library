@article{guan2021,
  title = {Effects of Groundwater Tables and Salinity Levels on Soil Organic Carbon and Total Nitrogen Accumulation in Coastal Wetlands with Different Plant Cover Types in a {{Chinese}} Estuary},
  author = {Guan, YN and Bai, JH and Wang, JJ and Wang, W and Wang, X and Zhang, L and Li, XW and Liu, XH},
