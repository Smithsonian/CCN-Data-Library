  keywords = {ACCUMULATION,blue carbon,BLUE CARBON,ENCROACHMENT,FORESTS,HAWKESBURY RIVER ESTUARY,mangrove,organic carbon,ROOT BIOMASS,SALT-MARSH,SEA-LEVEL,SOIL CARBON,stock change,VEGETATION}
