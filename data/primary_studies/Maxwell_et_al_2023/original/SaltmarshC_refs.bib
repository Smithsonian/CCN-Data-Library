@article{chen2017a,
  title = {Soil Carbon and Nitrogen Storage in Recently Restored and Mature Native {{Scirpus}} Marshes in the {{Yangtze Estuary}}, {{China}}: {{Implications}} for Restoration},
  author = {Chen, W and Ge, ZM and Fei, BL and Zhang, C and Liu, QX and Zhang, Q},
  year = {2017},
