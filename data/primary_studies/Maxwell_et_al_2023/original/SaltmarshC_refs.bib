  keywords = {ACCRETION RATES,BELOW-GROUND BIOMASS,biomass,carbon,COASTAL WETLANDS,elevation,ORGANIC-MATTER,PLANT ZONATION,RISE,salt marsh,sea-level history,SOIL,Sparana alterniflora,SPATIAL-PATTERNS,SURFACE-TOPOGRAPHY,TIDAL MARSH}
