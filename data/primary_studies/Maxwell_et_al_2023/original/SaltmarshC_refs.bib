  keywords = {Carbon loading,DISSOLVED INORGANIC CARBON,DYNAMICS,EVERGLADES,Hydrological regime,Marsh creek,MATTER,ORGANIC-CARBON,PARTICULATE,PLANT INVASION,SEA-LEVEL RISE,Seasonal variation,Vegetation type,WATER,YANGTZE-RIVER ESTUARY}
