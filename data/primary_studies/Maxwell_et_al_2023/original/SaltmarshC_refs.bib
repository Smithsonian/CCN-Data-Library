  keywords = {ACCUMULATION,DYNAMICS,ECOSYSTEM DEVELOPMENT,METAANALYSIS,ORGANIC-CARBON,SALT-MARSH,STORAGE,TEXTURE}
}

@article{yuan2014,
  title = {Methane Production Potential and Methanogenic Archaea Community Dynamics along the {{Spartina}} Alterniflora Invasion Chronosequence in a Coastal Salt Marsh},
  author = {Yuan, JJ and Ding, WX and Liu, DY and Xiang, J and Lin, YX},
  year = {2014},
