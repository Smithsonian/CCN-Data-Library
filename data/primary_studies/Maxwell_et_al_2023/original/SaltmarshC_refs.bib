@article{gao2020,
  title = {Enhanced {{Lateral Exchange}} of {{Carbon}} and {{Nitrogen}} in a {{Coastal Wetland With Invasive Spartina}} Alterniflora},
  author = {Gao, Y and Peng, RH and Ouyang, ZT and Shao, CL and Chen, JQ and Zhang, TT and Guo, HQ and Tang, JW and Zhao, F and Zhuang, P and Zhao, B},
