@article{syed2021,
  title = {Invasive {{Spartina}} Alterniflora in Controlled Cultivation: {{Environmental}} Implications of Converging Future Technologies},
  author = {Syed, S and Xu, M and Wang, ZF and Yu, CF and Lian, B},
  year = {2021},
