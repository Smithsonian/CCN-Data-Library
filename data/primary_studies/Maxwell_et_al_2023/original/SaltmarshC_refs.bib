@article{fourqurean2012,
  title = {Seagrass Ecosystems as a Globally Significant Carbon Stock},
  author = {Fourqurean, JW and Duarte, CM and Kennedy, H and Marba, N and Holmer, M and Mateo, MA and Apostolaki, ET and Kendrick, GA and {Krause-Jensen}, D and McGlathery, KJ and Serrano, O},
  year = {2012},
