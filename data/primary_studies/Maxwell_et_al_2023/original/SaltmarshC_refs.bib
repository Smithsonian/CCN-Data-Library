  keywords = {ABUNDANCE,Bacterial composition,CARBON,COASTAL SALT-MARSHES,Functional genes,OXIDATION,OXYGEN LOSS,PHRAGMITES-AUSTRALIS,PLANT INVASION,RHIZOSPHERE,Scirpus mariqueter,Spartina alterniflora,SULFATE-REDUCING BACTERIA,Sulfide,YANGTZE ESTUARY}
