  keywords = {ECOSYSTEM CARBON,Ecosystems,ENCROACHMENT,FOREST,FRACTIONATION,GREAT-PLAINS,Isotopes,LAND-USE CHANGE,NATURAL N-15,ORGANIC-MATTER DYNAMICS,Smooth cordgrass,Soil organic matter,TALLGRASS PRAIRIE,TEMPERATURE SENSITIVITY}
