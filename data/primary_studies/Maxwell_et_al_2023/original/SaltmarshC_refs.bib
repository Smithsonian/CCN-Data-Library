  keywords = {BACTERIAL,CARBON,DECOMPOSITION,EXPRESSION,Freshwater input,INTRUSION,LAND,METABOLISM,Microbial community shift,Phragmites australis expansion,PHRAGMITES-AUSTRALIS,RECLAMATION,Salt marsh restoration,Soil fungal community,TRANSCRIPTION,Yellow River Delta}
