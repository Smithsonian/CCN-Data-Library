  keywords = {Carbon sequestration,Eutrophication,HEAVY-METALS,LAGOON SE SPAIN,LITTER DECOMPOSITION,Mar Menor,MENOR LAGOON,MINE WASTES,Net primary productivity,NUTRIENT,Nutrient stocks,RETENTION,TRIN. EX STEUDEL,WATER,WETLAND}
}

