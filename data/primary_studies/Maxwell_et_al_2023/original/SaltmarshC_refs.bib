@article{hansen2017,
  title = {Factors Influencing the Organic Carbon Pools in Tidal Marsh Soils of the {{Elbe}} Estuary ({{Germany}})},
  author = {Hansen, K and Butzeck, C and Eschenbach, A and Grongroft, A and Jensen, K and Pfeiffer, EM},
