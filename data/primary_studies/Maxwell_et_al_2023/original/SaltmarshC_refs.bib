@article{costa2021,
  title = {Current and Future Carbon Stocks in Coastal Wetlands within the {{Great Barrier Reef}} Catchments},
  author = {Costa, MDD and Lovelock, CE and Waltham, NJ and Young, M and Adame, MF and Bryant, CV and Butler, D and Green, D and Rasheed, MA and Salinas, C and Serrano, O and York, PH and Whitt, AA and Macreadie, PI},
  year = {2021},
  month = jul,
  journal = {GLOBAL CHANGE BIOLOGY},
  volume = {27},
  number = {14},
  pages = {3257--3271},
  issn = {1354-1013},
  doi = {10.1111/gcb.15642},
  abstract = {Australia's Great Barrier Reef (GBR) catchments include some of the world's most intact coastal wetlands comprising diverse mangrove, seagrass and tidal marsh ecosystems. Although these ecosystems are highly efficient at storing carbon in marine sediments, their soil organic carbon (SOC) stocks and the potential changes resulting from climate impacts, including sea level rise are not well understood. For the first time, we estimated SOC stocks and their drivers within the range of coastal wetlands of GBR catchments using boosted regression trees (i.e. a machine learning approach and ensemble method for modelling the relationship between response and explanatory variables) and identified the potential changes in future stocks due to sea level rise. We found levels of SOC stocks of mangrove and seagrass meadows have different drivers, with climatic variables such as temperature, rainfall and solar radiation, showing significant contributions in accounting for variation in SOC stocks in mangroves. In contrast, soil type accounted for most of the variability in seagrass meadows. Total SOC stock in the GBR catchments, including mangroves, seagrass meadows and tidal marshes, is approximately 137 Tg C, which represents 9\%-13\% of Australia's total SOC stock while encompassing only 4\%-6\% of the total extent of Australian coastal wetlands. In a global context, this could represent 0.5\%-1.4\% of global SOC stock. Our study suggests that landward migration due to projected sea level rise has the potential to enhance carbon accumulation with total carbon gains between 0.16 and 0.46 Tg C and provides an opportunity for future restoration to enhance blue carbon.},
  langid = {english},
  keywords = {blue carbon,climate change,coastal wetlands,mangroves,seagrass meadows,soil carbon stocks,tidal marshes}
}

@inproceedings{craft2001,
  title = {Functional and Structural Trajectory ({{FAST}}) Model to Predict Wetland Ecosystem Development: {{A}} Case Study Using Constructed Salt Marshes},
  booktitle = {{{TRANSFORMATIONS OF NUTRIENTS IN NATURAL AND CONSTRUCTED WETLANDS}}},
  author = {Craft, CB},
  editor = {Vymazal, J},
  year = {2001},
  pages = {113--127},
  abstract = {A Functional and Structural Trajectory (FAST) model is presented that predicts the evolution of wetland structure and function during salt marsh ecosystem development. The FAST model is tested by comparing structural and functional attributes of marsh producers (Spartina), consumers (benthic invertebrates) and nutrient cycles (C, N, P) along a chronosequence of 1 to 28 year-old constructed Spartina alterniflora a marshes with paired older reference (natural) marshes. Salt marsh structure and function followed two inherently different trajectories during ecosystem development. Functional attributes, like Spartina biomass, invertebrate density and carbon and nutrient accumulation, exceeded 100\% equivalence before decreasing to levels found in reference marshes. In contrast, structural attributes like Spartina stem density and height, invertebrate species richness and soil carbon and nutrient pools gradually converged to equivalence without ever exceeding levels in reference marshes. Our trajectories also revealed that different components of the restored salt marsh ecosystem developed at different rates. Both Spartina structure and function achieved equivalence to reference wetlands within 10-15 years following establishment. Development of invertebrate structure and function required 15-20 years. Soil C and nutrient accumulation occurred almost instantaneously with colonization by Spartina. However, after 28 years, soil C and N pools were considerably less than in reference marshes. Our FAST model demonstrates that trajectories can be developed and used to predict the evolution of salt marsh structure and function during wetland ecosystem development. The model should be tested using similar ecosystems in different geographic regions and in other detritus based ecosystems to evaluate its predictive power and robustness.},
  isbn = {90-5782-076-5},
  langid = {english},
  keywords = {Benthic invertebrates,COMMUNITY,community structure,CORDGRASS,creation and restoration,DIVERSITY,ecosystem succession,estuarine wetlands,mitigation,NITROGEN,North Carolina,NORTH-CAROLINA,ORGANIC-CARBON,PHOSPHORUS,RESTORATION ECOLOGY,SAN-DIEGO BAY,soils,Spartina alterniflora,SPARTINA-ALTERNIFLORA,wetland,wetland functions.}
}

@article{craft2003,
  title = {The Pace of Ecosystem Development of Constructed {{Spartina}} Alterniflora Marshes},
  author = {Craft, C and Megonigal, P and Broome, S and Stevenson, J and Freese, R and Cornell, J and Zheng, L and Sacco, J},
  year = {2003},
  month = oct,
  journal = {ECOLOGICAL APPLICATIONS},
  volume = {13},
