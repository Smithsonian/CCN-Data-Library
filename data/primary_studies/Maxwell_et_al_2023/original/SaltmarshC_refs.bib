@article{kauffman2020,
  title = {Total Ecosystem Carbon Stocks at the Marine-Terrestrial Interface: {{Blue}} Carbon of the {{Pacific Northwest Coast}}, {{United States}}},
  author = {Kauffman, JB and Giovanonni, L and Kelly, J and Dunstan, N and Borde, A and Diefenderfer, H and Cornu, C and Janousek, C and Apple, J and Brophy, L},
