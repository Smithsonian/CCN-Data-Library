  keywords = {COASTAL WETLANDS,ecological stoichiometry,ECOLOGICAL STOICHIOMETRY,FRESH-WATER,inland soda saline-alkali wetland,N-P RATIOS,NUTRIENT ACCUMULATION,ORGANIC-CARBON,Phragmites australis,RIVER,SALT MARSHES,soil nutrients,TIDAL FRESH,VEGETATION,wetland degradation and restoration}
}

@article{yang2020e,
  title = {System-{{Specific Complex Interactions Shape Soil Organic Carbon Distribution}} in {{Coastal Salt Marshes}}},
  author = {Yang, D and Miao, XY and Wang, B and Jiang, RP and Wen, T and Liu, MS and Huang, C and Xu, C},
