  keywords = {ALPINE MEADOW,BELOW-GROUND BIOMASS,China's grassland,COMPACTION,Dryland,Grazing intensity,INNER-MONGOLIA,INTENSITY,Meta-analysis,MICROBIAL COMMUNITY,NITROGEN MINERALIZATION,ORGANIC-CARBON,SALT-MARSH,Soil microbial activity,Soil nutrient,TEMPERATE STEPPE}
