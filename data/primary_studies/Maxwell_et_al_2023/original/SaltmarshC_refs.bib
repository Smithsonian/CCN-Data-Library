  keywords = {CARBON BALANCE,CO2,CROPPING SYSTEMS,FRESH-WATER,MANGROVE SEDIMENTS,METHANE EMISSIONS,N2O EMISSIONS,NITROUS-OXIDE EMISSIONS,PEAT,SUBTROPICAL ESTUARY}
