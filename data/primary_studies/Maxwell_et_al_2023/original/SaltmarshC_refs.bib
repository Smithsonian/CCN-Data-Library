  keywords = {carbon dioxide,COAST,DEPENDENCE,DIOXIDE,EMISSION,FLUX,GASES,mangrove,methane,nitrous oxide,ORGANIC-MATTER,redox potential,salt marsh,sediment carbon,SOIL}
